<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:background="@drawable/bg_under_15_white"
        android:orientation="vertical"
        android:translationZ="4dp"
        android:paddingTop="18dp"
        android:paddingBottom="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="23dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="38dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tvDDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D+4"
                android:fontFamily="@font/spoqa_han_sans_neo_bold"
                android:textColor="@color/main_purple_blue2_8291E6"
                android:textSize="24dp"/>
            <TextView
                android:id="@+id/tvEmo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="오늘의 기분을 표현해보세요"
                android:fontFamily="@font/spoqa_han_sans_neo_bold"
                android:textSize="12dp"
                android:textColor="@color/main_purple_blue2_8291E6"/>
            <ImageView
                android:id="@+id/ivEmo"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/emo_circle"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="하루문답"
            android:textSize="12dp"
            android:textColor="@color/main_purple_blue2_8291E6"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tvTodayQue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="요즘 가장 하고 싶은게 뭐에요?"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textColor="@color/main_purple_blue2_8291E6"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/btnWriteEmo"
                android:layout_width="82dp"
                android:layout_height="28dp"
                android:layout_marginRight="11dp"
                android:gravity="center"
                android:translationZ="3dp"
                android:background="@drawable/bg_15_8996f3"
                android:text="기록하기"
                android:fontFamily="@font/spoqa_han_sans_neo_medium"
                android:textSize="12dp"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/btnGoPre"
            android:layout_width="32dp"
            android:layout_height="48dp"
            android:paddingLeft="7dp"
            android:paddingRight="13dp"
            android:paddingVertical="15dp"
            android:src="@drawable/arr_left"/>
        <ImageView
            android:id="@+id/ivGuideCard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/test_card" />
        <View
            android:layout_width="32dp"
            android:layout_height="48dp" />
    </LinearLayout>

</LinearLayout>